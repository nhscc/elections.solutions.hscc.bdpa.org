[ignore]

[include]

[libs]

[lints]

[options]
suppress_comment= \\(.\\|\n\\)*\\flow-disable-line
esproposal.optional_chaining=enable
esproposal.decorators=ignore
esproposal.nullish_coalescing=enable
module.name_mapper='^universe\/\(.*\)$' -> '<PROJECT_ROOT>/src/\1'
module.name_mapper='^universe\/global.scss$' -> '<PROJECT_ROOT>/src/_local-flow-defs.js'
module.name_mapper='^multiverse\/\(.*\)$' -> '<PROJECT_ROOT>/lib/\1'
module.name_mapper='^rbc\/\(.*\)$' -> '<PROJECT_ROOT>/node_modules/react-bulma-components/lib/components/\1'
# We need this one to catch all the local non-ES6 imports stuck using the
# suboptimal './src/*' syntax
module.name_mapper='^\.\/src\/\(.*\)$' -> '<PROJECT_ROOT>/src/\1'
module.name_mapper='^components\/\(.*\)$' -> '<PROJECT_ROOT>/src/components/\1'

[strict]
